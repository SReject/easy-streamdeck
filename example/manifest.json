{
    "Name": "easy-streamdeck Example: Counter",
    "Author": "SReject",
    "Description": "Recreation of Elgato's Counter plugin using easy-streamdeck",
    "URL": "https://github.com/SReject/easy-streamdeck",
    "Icon": "./example/icons/pluginIcon",
    "Version": "2.0.0",
    "OS": [
        {
            "Platform": "mac", 
            "MinimumVersion" : "10.11"
        },
        {
            "Platform": "windows", 
            "MinimumVersion" : "10"
        }
    ],

    "Actions": [
        {
            "Icon": "./example/icons/actionIcon",
            "Name": "Counter",
            "States": [
                {
                    "Image": "./example/icons/actionDefaultImage",
                    "TitleAlignment": "middle",
                    "FontSize": "16"
                }
            ],
            "SupportedInMultiActions": false,
            "Tooltip": "Counts how many times the button was pressed",
            "UUID": "com.srject.easystreamdeck.counter"
        }
    ],

    "CodePath": "./example/background.html",
    "PropertyInspectorPath": "./example/action.html"
}